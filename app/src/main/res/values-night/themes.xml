<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VisitorBook" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_400</item>
        <item name="colorSecondaryVariant">@color/secondary_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/secondary_700</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/secondary_700</item>

        <!-- Android 12 splash screen -->
        <item name="windowSplashScreenBackground">@color/secondary_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary_500</item>

        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.LabelSmall</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>

        <item name="android:colorBackground">@color/secondary_700</item>
        <item name="colorSurface">@color/secondary_500</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="dividerColor">@color/stroke_color</item>
        <item name="materialCardViewElevatedStyle">@style/CardView.Elevated</item>
        <item name="textInputOutlinedStyle">@style/TextInputLayout.Outlined</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/secondary_700</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/secondary_700</item>
    </style>

    <style name="CardView.Elevated" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/secondary_500</item>
        <item name="strokeColor">@color/stroke_color</item>
    </style>

    <style name="TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="startIconTint">?android:attr/textColorHint</item>
        <item name="endIconTint">?android:attr/textColorHint</item>
        <item name="boxStrokeColor">@color/primary_500</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/secondary_500</item>
        <item name="hintEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="errorIconDrawable">@drawable/ic_warning</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="Tabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_pill_outlined</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">2dp</item>
    </style>

    <style name="Tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_pill</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.TitleSmall</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tab.Active">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:background">@drawable/shape_pill</item>
    </style>
</resources>